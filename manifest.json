{

  "description": "Blaseball with sound, as Sam Rosenthal intended.",
  "manifest_version": 2,
  "name": "Please Imagine Sound",
  "version": "0.0.4",
  "homepage_url": "https://github.com/leo60228/please-imagine-sound",
  "icons": {
    "48": "lighthouse.svg"
  },

  "permissions": [
    "webRequest", "https://www.blaseball.com/*"
  ],

  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }

}
